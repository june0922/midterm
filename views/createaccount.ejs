<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create account</title>
    <link rel="stylesheet" href="./createaccount.css">
</head>
<body>
    <form id="create-account-form">
        <table>
            <tr>
                <td>
                    <h2>회원가입</h2>
                </td>
            </tr>
            <tr>
                <td>아이디</td>
            </tr>
            <tr>
                <td><input type="text" class="text id" name="id" required></td>
            </tr>
            <tr>
                <td>비밀번호</td>
            </tr>
            <tr>
                <td><input type="password" class="text pw" name="password" required></td>
            </tr>
            <tr class="pwc-box">
                <td>비밀번호 확인</td>
            </tr>
            <tr>
                <td><input type="password" class="text pwc" name="passwordConfirm" required></td>
            </tr>
            <tr>
                <td>이름</td>
            </tr>
            <tr>
                <td><input type="text" class="text name" name="name" required></td>
            </tr>
            <tr>
                <td>생년월일</td>
            </tr>
            <tr>
                <td><input type="date" class="text birth" name="birth" required></td>
            </tr>
            <tr>
                <td>이메일</td>
            </tr>
            <tr>
                <td>
                    <input type="text" class="email" name="email" required> @
                    <select name="emailDomain">
                        <option value="naver.com">naver.com</option>
                        <option value="gmail.com">gmail.com</option>
                        <option value="daum.net">daum.net</option>
                        <option value="nate.com">nate.com</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td><input type="submit" value="가입하기" class="btn"></td>
            </tr>
        </table>
    </form>

    <!-- JQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#create-account-form").on("submit", function (e) {
                e.preventDefault();

                var ID = $(".id").val();
                var PASSWORD = $(".pw").val();
                var PASSWORDCHECK = $(".pwc").val();
                var NAME = $(".name").val();
                var BIRTH = $(".birth").val();
                var EMAIL = $(".email").val() + "@" + $("select[name='emailDomain']").val();

                if (PASSWORD != PASSWORDCHECK) {
                    alert("비밀번호가 일치하지 않습니다.");
                    return false;
                }

                var accountData = {
                    id: ID,
                    password: PASSWORD,
                    name: NAME,
                    birth: BIRTH,
                    email: EMAIL
                };

                // 아이디 중복 확인 요청
                $.ajax({
                    url: "/check-id",
                    data: JSON.stringify({ id: ID }),
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        if (response.exists) {
                            alert("아이디가 이미 사용 중입니다. 다른 아이디를 입력해주세요.");
                        } else {
                            // 아이디 중복 확인 후 계정 생성 요청
                            $.ajax({
                                url: "/create-account",
                                data: JSON.stringify(accountData),
                                type: "POST",
                                contentType: "application/json; charset=utf-8",
                                success: function (response) {
                                    alert("계정이 성공적으로 생성되었습니다.");
                                    window.location.href = "./login.html";
                                },
                                error: function (err) {
                                    alert("계정 생성에 실패했습니다. 다시 시도해주세요.");
                                }
                            });
                        }
                    },
                    error: function (err) {
                        alert("아이디 중복 확인에 실패했습니다. 다시 시도해주세요.");
                    }
                });
            });
        });
    </script>
</body>
</html>
